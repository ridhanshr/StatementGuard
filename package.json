{
  "name": "statementguard",
  "version": "1.0.0",
  "description": "StatementGuard - PTSTMT Validation Tools",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "build": {
    "appId": "com.bri.statementguard",
    "productName": "StatementGuard",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "files": [
      "!**/*",
      "electron/main.js",
      "electron/preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "pyinstaller_dist/bridge.exe",
        "to": "bridge/bridge.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "StatementGuard-${version}-Setup.exe",
      "installerIcon": null,
      "uninstallerIcon": null,
      "installerHeaderIcon": null,
      "shortcutName": "StatementGuard"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "author": "BRI",
  "license": "ISC"
}
